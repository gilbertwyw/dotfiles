[user]
	name = Gilbert Wong
	email = gilbertwyw@gmail.com
[color]
	ui = auto
[merge]
	summary = true
	tool = vimdiff
	conflictstyle = diff3
[core]
	quotepath = false
	editor = vim -f
	autocrlf = input
  excludesfile = ~/.gitignore_global
[push]
	default = simple
[help]
	autocorrect = 1
[alias]
  cr = "!f() { git push origin @:refs/for/${1-master}; }; f"
  ec = config --global -e
  f  = "!f() { git fetch ${1-origin}; }; f"
  nb = "!f() { git checkout -t origin/${2-master} -b ${1}; }; f"
  rp = "!f() { git rebase -p origin/${1-master}; }; f"
  # require `git init` in repo
  ctags = !.git/hooks/ctags
  home = rev-parse --show-toplevel
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[color "decorate"]
  head = bold white
  branch = bold magenta
  remotebranch = blue
  tag = bold red
[rebase]
	autosquash = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[init]
	templatedir = ~/.git_template
[mergetool]
	prompt = false
	keepBackup = false
