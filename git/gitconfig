[color]
	ui = auto
[merge]
	summary = true
	tool = vimdiff
	conflictstyle = diff3
[core]
	quotepath = false
	editor = vim -f
	autocrlf = input
  excludesfile = ~/.gitignore_global
[push]
	default = simple
[help]
	autocorrect = 1
[alias]
  ec = config --global -e
  # require `git init` in repo
  ctags = !.git/hooks/ctags
  # git flow
  ffs = "!f() { git flow feature start $1; }; f"
	bb = branch -vv
	us = reset --soft @~
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[color "decorate"]
  head = bold white
  branch = bold magenta
  remotebranch = blue
  tag = bold red
[rebase]
	autosquash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[init]
	templatedir = ~/.git_template
[mergetool]
	prompt = false
	keepBackup = false
[commit]
	verbose = true
