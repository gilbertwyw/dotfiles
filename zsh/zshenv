export PATH="/usr/local/bin:$PATH"

export LC_ALL=$LANG

export EDITOR=`which vim`

# default: 1000
export NODE_REPL_HISTORY_SIZE=2000

# set 'ag' as the default source for 'fzf'
export FZF_DEFAULT_COMMAND='ag --skip-vcs-ignores -g ""'

# `brew info coreutils`
export MANPATH="/usr/local/coreutils/libexec/gnuman:$MANPATH"

