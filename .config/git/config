# vim:noexpandtab
[user]
	name = Gilbert Wong
	email = gilbertwyw@gmail.com
[color]
	ui = auto
[merge]
	summary = true
	tool = vimdiff
	conflictstyle = diff3
[core]
	quotepath = false
	autocrlf = input
  excludesfile = ~/.config/git/gitignore_global
	pager = delta
[interactive]
  diffFilter = delta --color-only
[push]
	default = simple
[help]
	autocorrect = 1
[alias]
  ec = config --global -e
	bb = branch -vv
	us = reset --soft @~
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[color "decorate"]
  head = bold white
  branch = bold magenta
  remotebranch = blue
  tag = bold red
[rebase]
	autosquash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[mergetool]
	prompt = false
	keepBackup = false
[commit]
	verbose = true
[pull]
	rebase = false
[delta]
  features = side-by-side
  navigate = true
[branch]
	sort = -committerdate
