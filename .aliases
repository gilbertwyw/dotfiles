alias a=alias
alias c=bat     # brew install bat
alias d=docker  # brew install docker
alias k=kubectl # brew install kubernetes-cli
alias m=man
alias u=unrar

alias rm=trash  # brew install trash
alias tf=terraform
alias vd='$EDITOR -d'

##########
#  Tmux  #
##########
alias tat='tmux new-session -As $(basename $PWD | tr . -)'

#########
#  npm  #
#########
alias ngi='npm install -g'
alias ngl='npm ls -g --depth=0'
alias ngo='npm outdated -g'

###########
#  macOS  #
###########
alias b=brew
alias o=open

#################
#  Zsh: global  #
#################
alias -g CC='| pbcopy'
alias -g FF='| fzf'
alias -g H='-h'
alias -g HH='--help'
alias -g HHH='-help'
alias -g L='| less'
alias -g BZ='| base64 -d | zcat'

#################
#  Zsh: suffix  #
#################
alias -s go=$EDITOR
