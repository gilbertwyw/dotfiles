# `brew tap jingweno/ccat && brew install ccat`
alias c=ccat
alias d=direnv
alias e='$EDITOR'
alias i=ifconfig
alias j=jekyll
alias k=kill
# alias provided by 'tmuxinator'
alias m=mux
alias n=npm
alias r=ruby
alias s=sass

alias bdd=boot2docker
alias bddsh='$(boot2docker shellinit)'
alias dcp=docker-compose #fig
alias eh='sudo vim /etc/hosts'
alias hb='hub browse'
alias tat='tmux new-session -As $(basename $PWD | tr . -)'
alias vd=vimdiff
alias wh=which

# `brew install hub`
#[[ -s $(which hub) ]] && alias git=hub
alias git=hub

alias server='python -m SimpleHTTPServer'

# npm
alias ngi='npm install -g'
alias ngl='npm ls -g --depth=0'
alias ngo='npm outdated -g'
alias ngu='npm update -g'
alias nis='npm install --save'
alias nisd='npm install --save-dev'
alias nh='npm home'
alias nr='npm run'
alias ns='npm start'
alias nt='npm test'

if [[ `uname` == 'Darwin' ]]; then
  alias b=brew
  alias bcu="brew cleanup"
  alias bod="brew outdated"
  alias bud="brew update"
  alias bug="brew upgrade"
  alias o=open
  alias pwdc='pwd | pbcopy'
fi

# tarball everything except installed node modules; '.git' folder included if exists
# caveat: have to run this in the same directory as the target
nodeball() {
  tar -cv --exclude 'node_modules' -zf "$1.tar.gz" $1;
}
